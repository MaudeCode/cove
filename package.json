{
  "name": "@maudecode/cove",
  "version": "0.2.0",
  "description": "A beautiful, full-featured WebUI for OpenClaw",
  "type": "module",
  "license": "MIT",
  "author": "Kilian Tyler <kilian@kil.dev>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MaudeCode/cove.git"
  },
  "homepage": "https://github.com/MaudeCode/cove#readme",
  "bugs": {
    "url": "https://github.com/MaudeCode/cove/issues"
  },
  "keywords": [
    "openclaw",
    "webui",
    "chat",
    "ai",
    "assistant"
  ],
  "bin": {
    "@maudecode/cove": "./bin/cove.js"
  },
  "files": [
    "dist",
    "bin"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "lint": "oxlint src/",
    "lint:fix": "oxlint src/ --fix",
    "format": "oxfmt --write src/",
    "format:check": "oxfmt --check src/",
    "typecheck": "tsc -b --noEmit",
    "knip": "knip",
    "check": "bun run lint && bun run format:check && bun run typecheck && pnpm knip",
    "prepare": "husky"
  },
  "dependencies": {
    "@fontsource/geist-sans": "^5.2.5",
    "@fontsource/inter": "^5.2.8",
    "@fontsource/opendyslexic": "^5.2.5",
    "@preact/signals": "^2.6.2",
    "dompurify": "^3.3.1",
    "lucide-preact": "^0.563.0",
    "marked": "^17.0.1",
    "preact": "^10.27.2",
    "preact-router": "^4.1.2",
    "prismjs": "^1.30.0",
    "simple-icons": "^16.7.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.4.0",
    "@commitlint/config-conventional": "^20.4.0",
    "@preact/preset-vite": "^2.10.2",
    "@tailwindcss/vite": "^4.1.18",
    "@types/dompurify": "^3.2.0",
    "@types/node": "^24.10.1",
    "@types/prismjs": "^1.26.5",
    "husky": "^9.1.7",
    "knip": "^5.82.1",
    "oxfmt": "^0.27.0",
    "oxlint": "^1.42.0",
    "tailwindcss": "^4.1.18",
    "typescript": "~5.9.3",
    "vite": "^7.2.4"
  },
  "knip": {
    "$schema": "https://unpkg.com/knip@5/schema.json",
    "ignoreExportsUsedInFile": true,
    "entry": [
      "src/main.tsx",
      "src/lib/utils.ts",
      "src/lib/i18n.ts",
      "src/locales/index.ts"
    ],
    "ignore": [
      "src/signals/agents.ts"
    ]
  }
}
